<body>

  <h1>Code Cute ba ako?</h1>
  <button onclick="checkAnswer('A')">A. Yes</button>
  <button onclick="checkAnswer('B')">B. A</button>
  <button onclick="checkAnswer('C')">C. B</button>
  <button onclick="checkAnswer('D')">D. All of the Above</button>
  <button onclick="checkAnswer('E')">E. Crush mo ba ako?</button>

  <p id="result"></p>

  <script>
    function checkAnswer(answer) {
      let resultText = '';
      if (answer === 'D') {
        resultText = "Correct! Lahat ng sagot ay tama. Code Cute ka nga! üíñ";
      } else if (answer === 'E') {
        resultText = "Hmmm... Oo!!!üòç";
      } else {
        resultText = "Tama na rin, kasi lahat ng sagot ay nagpo-point sa 'Yes' üíï";
      }
      document.getElementById("result").innerText = resultText;
    }
  </script>

